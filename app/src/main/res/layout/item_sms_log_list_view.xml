<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/smsLog_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="魏培龙"
                    android:textColor="@color/black"
                    android:textSize="@dimen/content_text_size_14" />

                <TextView
                    android:id="@+id/smsLog_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textSize="@dimen/content_text_size_12" />
            </LinearLayout>

            <TextView
                android:gravity="center_horizontal"
                android:id="@+id/smsLog_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="2017-02-19\n12:13:02"
                android:textSize="12sp" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/smsLog_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="带毛线欧美阿斯蒂芬监考的话那个阿尔方式案例阿斯利康放假啊类似的看法拉屎农夫拉克案例"
                android:textSize="@dimen/content_text_size_10" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>